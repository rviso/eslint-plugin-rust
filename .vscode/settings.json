{
  "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  "editor.formatOnSave": false, // 默认情况下使用prettier格式化代码 , 每次保存的时候自动格式化Prettier
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
  },
  "eslint.enable": true,
  "eslint.validate": [
    "rust",
    "rs"
  ],
  "stylelint.enable": true,
  "stylelint.validate": [
    // 配置stylelint检查的文件类型范围
    "css",
    "scss",
    "less",
    "sass",
    "postcss",
    "vue"
  ],
  // =============== 为特定的语言配置格式化程序 ===============
  "[rust]": {
    "editor.defaultFormatter": "jinxdash.prettier-rust",
    "editor.formatOnSave": true
  },
  "git.enableSmartCommit": true,
  "GitCommitPlugin.MaxSubjectCharacters": 72,
  "liveServer.settings.port": 5501,
  "cSpell.words": [
    "commitlint",
    "execa",
    "mockjs",
    "Pinia",
    "rviso",
    "stylelint",
    "tailwindcss",
    "unplugin",
    "Vitest",
    "rustup",
    "rviso",
    "tauri"
  ],
  "vitest.commandLine": "pnpm test --",
  "vitest.enable": true,
  "commentTranslate.multiLineMerge": true
}
